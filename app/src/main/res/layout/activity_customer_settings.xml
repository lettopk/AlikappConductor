<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.Alikapp.alikappconductor.CustomerSettingsActivity"
    android:orientation="vertical"
    android:background="@color/AlikappGris"
    android:padding="20sp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/profileImage"
                android:layout_width="142dp"
                android:layout_height="149dp"
                android:layout_gravity="center"
                android:layout_marginBottom="20sp"
                android:src="@mipmap/ic_default_user" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Cédula de Ciudadanía"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/cedulaImage"
                    android:layout_width="158dp"
                    android:layout_height="158dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="20sp"
                    android:src="@mipmap/ic_default_user" />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Verificar"
                    android:id="@+id/btnVerificarCedula"/>

            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Pasado Judicial"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/pasadoJudicialImage"
                    android:layout_width="158dp"
                    android:layout_height="158dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="20sp"
                    android:src="@mipmap/ic_default_user" />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Verificar"
                    android:id="@+id/btnVerificarPasado"/>

            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Tarjeta de propiedad"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/tarjetaPropiedadImage"
                    android:layout_width="158dp"
                    android:layout_height="158dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="20sp"
                    android:src="@mipmap/ic_default_user" />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Verificar"
                    android:id="@+id/btnVerificarPropiedad"/>

            </LinearLayout>

            <EditText
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/AlikappBlue"
                android:textColor="@color/black"
                android:hint="Nombre"
                android:layout_marginBottom="20sp"
                android:enabled="false"/>

            <EditText
                android:id="@+id/cedula"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/AlikappBlue"
                android:textColor="@color/black"
                android:hint="Cédula de Ciudadanía"
                android:layout_marginBottom="20sp"
                android:enabled="false"/>
            <EditText
                android:id="@+id/numeroPlaca"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/AlikappBlue"
                android:textColor="@color/black"
                android:hint="PLaca"
                android:layout_marginBottom="20sp"
                android:enabled="false"/>
            <EditText
                android:id="@+id/vehiculo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/AlikappBlue"
                android:textColor="@color/black"
                android:hint="vehículo"
                android:layout_marginBottom="20sp"
                android:enabled="false"/>
            <EditText
                android:id="@+id/phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/AlikappBlue"
                android:textColor="@color/black"
                android:hint="Numero celular"
                android:layout_marginBottom="20sp"
                android:inputType="number"
                android:enabled="false"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:id="@+id/confirm"
                android:textColor="#e4e3e3"
                android:background="@drawable/boton_confirmacion"
                android:text="confirmar"
                android:visibility="gone"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/back"
                android:layout_marginTop="10dp"
                android:textColor="#e4e3e3"
                android:background="@drawable/boton_confirmacion"
                android:text="atras"/>
        </LinearLayout>
    </ScrollView>


</LinearLayout>
