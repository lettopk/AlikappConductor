<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.Alikapp.alikappconductor.CustomerSettingsActivity"
    android:orientation="vertical"
    android:background="#204051"
    android:padding="20sp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/abeezee"
                android:gravity="center"
                android:text="Foto de Perfil"
                android:textColor="#E4E3E3"
                android:textSize="30dp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="#84A9AC">

                <ImageView
                    android:id="@+id/profileImage"
                    android:layout_width="142dp"
                    android:layout_height="149dp"
                    android:layout_gravity="center"
                    android:src="@mipmap/ic_default_user" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/abeezee"
                android:gravity="center"
                android:text="Cédula de Ciudadanía"
                android:textColor="#E4E3E3"
                android:textSize="30dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#84A9AC">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/cedulaImage"
                        android:layout_width="158dp"
                        android:layout_height="158dp"
                        android:layout_gravity="center"
                        android:layout_marginBottom="20sp"
                        android:src="@mipmap/ic_default_user" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/abeezee"
                        android:gravity="center"
                        android:text="Agrega una foto de tu cedula,
                        dando click en la imagen a la izquierda,
                        recuerda tener buena luz, que sea clara.

                        Puedes tomar la foto de manera horizontal"
                        android:textColor="#204051"
                        android:textSize="15dp" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20sp"
                        android:backgroundTint="@color/AlikappBlue"
                        android:enabled="false"
                        android:fontFamily="@font/abeezee"
                        android:hint="Nombre"
                        android:textColor="@color/black" />

                    <EditText
                        android:id="@+id/cedula"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20sp"
                        android:backgroundTint="@color/AlikappBlue"
                        android:enabled="false"
                        android:fontFamily="@font/abeezee"
                        android:hint="Cédula de Ciudadanía"
                        android:textColor="@color/black" />
                    <EditText
                        android:id="@+id/phone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20sp"
                        android:backgroundTint="@color/AlikappBlue"
                        android:enabled="false"
                        android:hint="Numero celular"
                        android:inputType="number"
                        android:fontFamily="@font/abeezee"
                        android:textColor="@color/black" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/abeezee"
                android:gravity="center"
                android:text="Pasado Judicial"
                android:textColor="#E4E3E3"
                android:textSize="30dp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#84A9AC">

                <ImageView
                    android:id="@+id/pasadoJudicialImage"
                    android:layout_width="158dp"
                    android:layout_height="158dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="20sp"
                    android:src="@mipmap/ic_default_user" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/abeezee"
                android:gravity="center"
                android:text="Tarjeta de propiedad"
                android:textColor="#E4E3E3"
                android:textSize="30dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#84A9AC">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/tarjetaPropiedadImage"
                        android:layout_width="158dp"
                        android:layout_height="158dp"
                        android:layout_gravity="center"
                        android:layout_marginBottom="20sp"
                        android:src="@mipmap/ic_default_user" />

                </LinearLayout>

                <EditText
                    android:id="@+id/numeroPlaca"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20sp"
                    android:backgroundTint="@color/AlikappBlue"
                    android:enabled="false"
                    android:fontFamily="@font/abeezee"
                    android:hint="PLaca"
                    android:textColor="@color/black" />

                <EditText
                    android:id="@+id/vehiculo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20sp"
                    android:backgroundTint="@color/AlikappBlue"
                    android:enabled="false"
                    android:fontFamily="@font/abeezee"
                    android:hint="vehículo"
                    android:textColor="@color/black" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#84A9AC">
                <Button
                    android:id="@+id/confirm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/boton_confirmacion"
                    android:text="confirmar"
                    android:textColor="#e4e3e3"
                    android:fontFamily="@font/abeezee"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/back"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/boton_confirmacion"
                    android:text="atras"
                    android:fontFamily="@font/abeezee"
                    android:textColor="#e4e3e3" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>


</LinearLayout>