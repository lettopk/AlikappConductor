<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.Alikapp.alikappconductor.CustomerLoginActivity"
    android:orientation="vertical"
    android:background="#e4e3e3"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:ignore="MissingConstraints"
        android:padding="20dp"
        android:background="#e4e3e3"
        >

        <EditText
            android:id="@+id/email"
            android:backgroundTint="#204051"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="#204051"
            android:textColor="#204051"
            android:hint="email" />

        <EditText
            android:id="@+id/password"
            android:backgroundTint="#204051"
            android:textColorHint="#204051"
            android:textColor="#204051"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="ContraseÃ±a" />

        <Button
            android:id="@+id/login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="login"
            android:background="@drawable/boton_login"
            />

        <Button
            android:id="@+id/registration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="registrarse"
            android:background="@drawable/boton_login"

            />

        <ImageView
            android:layout_width="10dp"
            android:layout_height="50dp"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>

