<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.Alikapp.alikappconductor.CustomerLoginActivity"
    android:orientation="vertical"
    android:background="#e4e3e3"
    android:layout_gravity="center"
    >

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#e4e3e3"
        android:padding="30dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">

            <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="300dp"
                    android:layout_height="200dp"
                    android:src="@mipmap/logo_alikapp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:backgroundTint="#204051"
            android:drawableStart="@drawable/ic_mail5"
            android:drawableTint="#353535"
            android:hint="   email"
            android:textColor="#204051"
            android:textColorHint="#204051" />

        <EditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:backgroundTint="#204051"
            android:drawableStart="@drawable/ic_password5"
            android:drawableTint="#353535"
            android:hint="   ContraseÃ±a"
            android:inputType="textPassword"
            android:textColor="#204051"
            android:textColorHint="#204051" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.royrodriguez.transitionbutton.TransitionButton
                android:id="@+id/logint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/boton_login"
                android:gravity="center"
                android:layout_marginTop="20dp"
                android:text="Iniciar Secion"
                android:textColor="@android:color/white"
                app:defaultColor="#204051"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:loaderColor="#e4e3e3" />


        </androidx.constraintlayout.widget.ConstraintLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            >

            <Button

                android:id="@+id/registration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/btn_login_ripple"
                android:text="registrarse"
                android:textColor="@drawable/txt_btn_login"
                />

        </LinearLayout>

        <ImageView
            android:layout_width="10dp"
            android:layout_height="10dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/splash"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:background="@color/AlikappGris"
        tools:context=".splashScreen"
        >

        <ImageView
            android:id="@+id/imagenlogo"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="200dp"
            android:foregroundGravity="center"
            android:src="@mipmap/logo_alikapp"
            tools:layout_editor_absoluteX="105dp"
            tools:layout_editor_absoluteY="265dp" />

        <TextView
            android:id="@+id/textAlikapp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/abeezee"
            android:gravity="center"
            android:text=" Urgencias Mecanicas"
            android:textColor="@color/AlikappBlue"
            android:textSize="18sp"
            android:layout_marginStart="-20dp"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="139dp"
            tools:layout_editor_absoluteY="696dp" />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

