<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    tools:context=".CustomerMapActivity"
    android:background="@color/AlikappBlue">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:id="@+id/mainCoordinator">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/Theme.Alikapp.AppBarOverlay">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="?attr/colorPrimary"
                app:popupTheme="@style/Theme.Alikapp.PopupOverlay" />

        </com.google.android.material.appbar.AppBarLayout>

        <include
            android:id="@+id/include"
            layout="@layout/content_main" />

        <fragment
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/fab"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/fab_margin"
                    app:backgroundTint="#204051"
                    android:src="@drawable/ic_btnhamburguesa"
                    app:fabCustomSize="40dp"
                    app:maxImageSize="20dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>
            </LinearLayout>
        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="bottom">

            <androidx.coordinatorlayout.widget.CoordinatorLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context="com.labseon.alikapp.Activity_mapa">

                <androidx.core.widget.NestedScrollView
                    android:id="@+id/bottom_sheet"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#204051"
                    android:backgroundTint="#464646"
                    map:behavior_hideable="true"
                    map:behavior_peekHeight="100dp"
                    map:layout_behavior="@string/bottom_sheet_behavior">


                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/driverInfo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:orientation="vertical"
                        android:paddingLeft="20dp"
                        android:paddingEnd="20dp">

                        <ImageView
                            android:id="@+id/driverProfileImage"
                            android:layout_width="100sp"
                            android:layout_height="100sp"
                            android:background="@drawable/boton_confirmacion"
                            android:padding="20sp"
                            android:src="@mipmap/ic_default_user"
                            tools:ignore="MissingConstraints" />


                        <Button
                            android:id="@+id/mChat"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/boton_ingreso"
                            android:text="Chat"
                            android:layout_marginEnd="20dp"
                            app:layout_constraintEnd_toEndOf="@+id/driverProfileImage"
                            app:layout_constraintStart_toStartOf="@+id/driverProfileImage"
                            app:layout_constraintTop_toBottomOf="@+id/driverProfileImage" />

                        <TextView
                            android:id="@+id/driverName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="20sp"
                            android:paddingBottom="10sp"
                            android:text="nombre"
                            android:fontFamily="@font/abeezee"
                            android:textStyle="bold"
                            android:textSize="15sp"
                            android:textColor="@color/AlikappGris"
                            app:layout_constraintBottom_toTopOf="@+id/driverPhone"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/driverProfileImage" />

                        <TextView
                            android:id="@+id/driverPhone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="20sp"
                            android:paddingBottom="10sp"
                            android:text="telefono"
                            android:fontFamily="@font/abeezee"
                            android:textStyle="bold"
                            android:textColor="@color/AlikappGris"
                            android:textSize="15sp"
                            app:layout_constraintBottom_toTopOf="@+id/driverCar"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/driverProfileImage" />

                        <TextView
                            android:id="@+id/driverCar"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="20sp"
                            android:paddingBottom="10sp"
                            android:text="carro"
                            android:fontFamily="@font/abeezee"
                            android:textStyle="bold"
                            android:textColor="@color/AlikappGris"
                            android:textSize="15sp"
                            app:layout_constraintBottom_toTopOf="@+id/request"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/driverProfileImage" />


                        <RatingBar
                            android:id="@+id/ratingBar"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:numStars="5"
                            android:visibility="gone"
                            android:stepSize="0.1"
                            app:layout_constraintBottom_toTopOf="@+id/driverName"
                            app:layout_constraintStart_toEndOf="@+id/driverProfileImage" />

                        <Button
                            android:id="@+id/request"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:layout_marginTop="20dp"
                            android:background="@drawable/boton_emergencia"
                            android:text="Finalizar Servicio"
                            android:textColor="#e4e3e3"
                            app:layout_constraintBottom_toBottomOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>


                </androidx.core.widget.NestedScrollView>

            </androidx.coordinatorlayout.widget.CoordinatorLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/contrainLayout"
                android:layout_width="match_parent"
                android:layout_height="200dp"

                android:orientation="vertical"
                android:layout_gravity="center">

                <com.skyfishjy.library.RippleBackground
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/content"
                    map:rb_color="@color/AlikappRed"
                    map:rb_radius="13dp"
                    map:rb_rippleAmount="4"
                    map:rb_duration="3000"
                    map:rb_scale="8">

                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:id="@+id/desplegarCuadro"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="visible"
                        app:rippleColor="@color/AlikappBlue"
                        android:outlineSpotShadowColor="@color/AlikappRed"
                        android:text="E"
                        android:background="@color/AlikappRed"
                        android:backgroundTint="@color/AlikappRed"

                        android:layout_centerInParent="true"
                        />
                </com.skyfishjy.library.RippleBackground>


            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>



    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/secondCoodinator">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardViewBusqueda"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                app:cardBackgroundColor="#464646"
                app:cardCornerRadius="20dp"

                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <com.wang.avi.AVLoadingIndicatorView
                        android:id="@+id/avi"
                        style="@style/AVLoadingIndicatorView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:padding="20dp"
                        app:indicatorColor="@color/AlikappGris"
                        app:indicatorName="TriangleSkewSpinIndicator" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/abeezee"
                        android:gravity="center"
                        android:padding="20dp"
                        android:text="CARGANDO..."
                        android:textColor="@color/AlikappGris"
                        android:textSize="30sp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </LinearLayout>


            </androidx.cardview.widget.CardView>


        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>