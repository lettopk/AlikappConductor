<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="5dp">
            <include
                layout="@layout/activity_front_creditcard"
                android:layout_width="match_parent"
                android:id="@+id/Creditcardfront"
                android:visibility="visible"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toTopOf="@+id/linearLayout3"
                app:layout_constraintTop_toTopOf="parent" />

            <include
                layout="@layout/activity_back_creditcard"
                android:layout_width="match_parent"
                android:id="@+id/Creditcardback"
                android:visibility="gone"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toTopOf="@+id/linearLayout3"
                app:layout_constraintTop_toTopOf="parent" />
            <LinearLayout
                android:id="@+id/linearLayout3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/card_1"
                tools:ignore="UnknownId">

                <EditText
                    android:id="@+id/numTc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Numero de tarjeta creito"
                    android:inputType="number"
                    android:maxLength="16"
                    android:textSize="20dp" />

                <EditText
                    android:id="@+id/nomComp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLength="20"
                    android:hint="Nombre de la Tarjeta"
                    android:textSize="20dp"
                    android:capitalize="words"/>

                <EditText
                    android:id="@+id/numCcv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="CCV"
                    android:inputType="number"
                    android:maxLength="3"
                    android:textSize="20dp" />

                <EditText
                    android:id="@+id/fecVenc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="fecha de vencimiento MM/AA"
                    android:inputType="number"
                    android:maxLength="4"
                    android:textSize="20dp" />

                <Button
                    android:id="@+id/btnConfir"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Confirmar" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>